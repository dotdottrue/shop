<h1>Produkte</h1>

<table class="table">
  <thead>
    <tr>
      <th>Abbildung</th>
      <th>Produkt</th>
      <th>Beschreibung</th>
      <th>Preis</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag product.avatar.url(:small) %></td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= number_to_currency(product.price , :unit=>'â‚¬', separator:",", format:"%n%u")%></td>
        <td><%= link_to product, class: 'btn btn-default btn-xs' do%>
          <i class="fa fa-eye">Anzeigen</i>
        <% end %>
        <% if current_user.admin %>
            <%= link_to 'Bearbeiten', edit_product_path(product), class: 'btn btn-default btn-xs' %>
            <%= link_to 'Entfernen', product, method: :delete, data: { confirm: 'Sind Sie sicher?' }, class: 'btn btn-default btn-xs'%>
        <% end %>
          <%= button_to line_items_path(:product_id => product), :class => 'btn btn-default btn-xs' do%>
          <i class="fa fa-shopping-cart fa-2x"></i>
          <% end %>
        </td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.admin? %>
    <%= link_to 'Neues Produkt', new_product_path, class: 'btn btn-default btn-xs' %>
<% end %>

