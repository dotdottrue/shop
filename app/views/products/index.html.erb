<h1>Listing Products</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.image %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product, class: 'btn btn-default btn-xs' %>
        <% if user_signed_in? %>
            <% if current_user.admin? %>
                <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-default btn-xs' %>
                <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-xs'%>
            <% end %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
    <% if current_user.admin? %>
        <%= link_to 'New Product', new_product_path, class: 'btn btn-default btn-xs' %>
    <% end %>
<% end %>
