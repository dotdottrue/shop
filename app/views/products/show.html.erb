<h1><%= @product.name %></h1>


<div class="col-xs-5">
  <%= image_tag @product.avatar.url(:medium) %>
  <h2><%= @product.price %> Euro</h2>
</div>
<div class="col-xs-7">
<table class="table">
  <tr><th>Beschreibung</th></tr>
  <tr><td><%= @product.description %></td></tr>
  <tr><td>
    <%= link_to 'Zurück', products_path, class: 'btn btn-default btn-xs' %>
    <% if current_user.admin %>
        <%= link_to 'Zurück zur Produkterstellung', new_product_path, class: 'btn btn-default btn-xs' %>
        <%= link_to 'Bearbeiten', edit_product_path(@product), class: 'btn btn-default btn-xs' %>
    <% end %>

  </td></tr>
</table>
</div>