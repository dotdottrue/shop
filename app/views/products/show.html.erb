<h1><%= @product.name %></h1>

<div class="row">
  <div class="col-xs-5">
    <%= image_tag @product.avatar.url(:medium) %>
  </div>
  <div class="col-xs-7">
      <p><%= simple_format @product.description %></p>
       <h2><%= number_to_currency(@product.price) %></h2>
      <%= button_to line_items_path(:product_id => @product), :class => 'btn btn-default btn-md' do %>
        <i class="fa fa-shopping-cart fa-2x"></i> In den Einkaufswagen
      <% end %>
  </div>
</div>
<% if user_signed_in? and current_user.admin %>
      <%= link_to 'Bearbeiten', edit_product_path(@product), class: 'btn btn-default btn-xs' %>
  <% end %>