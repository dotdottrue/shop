
<%= form_for(@product, :html => { :multipart => true, :role => 'form' }  ) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :Bild %>
    <%= f.file_field :avatar, class: 'btn btn-default' %>
  </div>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :Beschreibung %><br>
    <%= f.text_area :description, class:'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :Preis %><br>
    <%= f.text_field :price, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :Kategorie %><br>
    <%= f.collection_select :category_ids, Category.all, :id, :name, { selected: @product.categories.map(&:id), include_hidden: false}, multiple: true, class: 'form-control', role: 'dropdown' %>
  </div>
  <div class="actions">
    <%= f.submit "Produkt speichern", :class => 'btn btn-default' %>
  </div>

<% end %>