<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1>

<table class="table">
  <thead>
    <tr>
      <th>Bestellnummer</th>
      <% if current_user.admin %>
       <th>Benutzer</th>
      <% end %>
      <th>Gesamtpreis</th>
      <th>Bestelldatum</th>
      <th>Bestellstatus </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.order_number %></td>
        <% if current_user.admin %>
          <td><%= order.user_id %></td>
        <% end %>
        <td><%= number_to_currency(order.total_price) %></td>
        <td><%= order.order_date %></td>
        <td><%= I18n.t('activerecord.attributes.order.status.'+ order.status) %></td>
        <td><%= link_to order do%>
        <i class="fa fa-eye">Anzeigen</i>
        <% end %>
        </td>
        <% if current_user.admin %>
        <td><%= link_to 'Bearbeiten', edit_order_path(order) %></td>
        <td><%= link_to 'LÃ¶schen', order, method: :delete, data: { confirm: 'Sind Sie sich sicher?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>